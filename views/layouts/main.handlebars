<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>
      CAT GAME
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class='wrapper'>
      <header>
        <h1>
          <a href='/'>
            CAT GAME
          </a>
        </h1>
        <h2>Welcome, {{username}}!</h2>

        <nav>
          {{#if loggedIn}}
            <a href="/api/cats/{{cat_id}}">
              My Cat
            </a>
            |
            <a href='/api/cats/'>
              Leaderboard
            </a>
            |
            <button id='logout' class='btn-no-style'>
              Logout
            </button>

            {{!-- <a href="/training/{{username}}">Training</a> --}}
          {{else}}
            <a href='/login'>
              Login
            </a>
          {{/if}}
        </nav>
      </header>
      <main>
        {{{body}}}
      </main>
      <footer>
        Thanks for visiting!
      </footer>
    </div>
    {{#if loggedIn}}
      <script src='/javascript/logout.js'></script>
    {{/if}}
  </body>
</html>